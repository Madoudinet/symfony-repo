{% extends "base.html.twig" %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}

<table class="container table table-dark table-striped">
<thead>
    <tr>
        <th>#</th>
        <th>Categorie</th>
        <th>Titre</th>
        <th>Image</th>
        <th>Contenu</th>
        <th>Date</th>
        <th>Option</th>
    </tr>
</thead>
<tfoot>
    <tr>
        <th>#</th>
        <th>Categorie</th>
        <th>Titre</th>
        <th>Image</th>
        <th>Contenu</th>
        <th>Date</th>
        <th>Option</th>
    </tr>
</tfoot>
<tbody>
    {% for article in articles %}      
    <tr>
        <td>{{ article.id }}</td>
        <td>{{ article.category.title }}</td>
        <td>{{ article.title }}</td>
        <td><img src="{{ asset("img/upload/" ~ article.image) }}" alt="" width="50"></td>
        <td>{{ article.content|slice(0, 50) }}</td>
        <td>{{ article.createdAt|date('d/m/Y Ã  H:i:s') }}</td>
        <td>
            <a href="{{ path('blog_show', {id: article.id}) }}" class="text-info">voir</a>
            <a href="{{ path('blog_modifier', {id: article.id}) }}" class="text-warning">modifier</a>
            <a href="{{ path('blog_supprimer', {id: article.id}) }}" class="text-danger">supprimer</a>
        </td>
    </tr>
    {% endfor %}
</tbody>


</table>


{% endblock %}